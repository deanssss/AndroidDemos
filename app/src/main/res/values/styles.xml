<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="CusRatingBar">
        <!-- 默认的星星图片 -->
        <attr name="starNormal" format="reference"/>
        <!-- 选中的星星图片 -->
        <attr name="starChecked" format="reference"/>
        <!-- 星星的个数 -->
        <attr name="starNum" format="integer"/>
        <!-- 可选的星星的步长 如：0.5表示可选半颗星 -->
        <attr name="starStep" format="float"/>
        <!-- 星星之间的间距 -->
        <attr name="starSpace" format="dimension"/>
        <!-- 星星的大小 -->
        <attr name="starSize" format="dimension"/>
        <!-- 选中星星的部分 小于等于starNum -->
        <attr name="rating" format="float"/>
        <!-- 星星是否响应事件 默认为true 表示仅作为展示 -->
        <attr name="isIndicator" format="boolean"/>
    </declare-styleable>
</resources>
