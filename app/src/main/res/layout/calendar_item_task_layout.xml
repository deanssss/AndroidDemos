<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@drawable/calendar_grid_task_border"
    tools:layout_height="60dp">

    <ImageView
        android:id="@+id/task_image_iv"
        android:background="#FFCC33"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="0.5dp"
        android:layout_marginStart="0.5dp"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/team_image_iv"
        android:src="#CCCC99"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="0.5dp"
        android:layout_marginEnd="0.5dp"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/team_icon_iv"
        android:src="@mipmap/ic_launcher"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        tools:src="@tools:sample/avatars"
        tools:ignore="ContentDescription" />
    
    <TextView
        android:id="@+id/occupied_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="3dp"
        android:textSize="8sp"
        android:textColor="#bdc9d6"
        android:lines="1"
        android:ellipsize="end"
        android:background="#9C056273"
        android:text="XX英雄的试炼(南京Hero获得第1名)"
        android:layout_marginBottom="0.5dp"
        android:layout_marginStart="0.5dp"
        android:layout_marginEnd="0.5dp"
        tools:ignore="HardcodedText,SmallSp" />

    <xyz.dean.androiddemos.demos.dcalendar.internal.CalendarMultiDateView
        android:id="@+id/date_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>