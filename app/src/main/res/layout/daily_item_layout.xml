<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="53dp"
    android:layout_height="46dp"
    android:padding="0.5dp"
    android:background="#4974AF">

    <ImageView
        android:id="@+id/occupied_team_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="#8331ce"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/day_of_month_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#ffffff"
        android:textSize="10sp"
        tools:text="1"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/result_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="8sp"
        android:textColor="#bdc9d6"
        tools:text="未揭晓"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/team_logo_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@tools:sample/avatars"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/activity_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textSize="8sp"
        android:textColor="#bdc9d6"
        android:lines="1"
        android:ellipsize="end"
        tools:text="星星大作战"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/result_status_iv"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_in_progress"
        tools:visibility="visible"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/occupied_team_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:lines="1"
        android:textSize="7sp"
        android:textColor="#ffffff"
        tools:text="南京Hero"
        tools:ignore="SmallSp" />

    <View
        android:id="@+id/mask_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:visibility="gone" />

    <TextView
        android:id="@+id/activity_start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/calendar_activity_label_bg"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="1dp"
        android:text="开始"
        android:textSize="9sp"
        android:textColor="#8ACF53"
        tools:ignore="HardcodedText,SmallSp" />
</androidx.constraintlayout.widget.ConstraintLayout>